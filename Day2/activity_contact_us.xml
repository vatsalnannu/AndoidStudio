<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/song1txt"
        android:layout_marginTop="30dp"
        android:text="Super Mario"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/song1btn"
        android:text="Play"
        android:layout_toRightOf="@+id/song1txt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/song2txt"
        android:layout_below="@+id/song1txt"
        android:layout_marginTop="40dp"
        android:text="Gud nal Ishq Mitha"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="wrap_content"
        android:id="@+id/song2btn"
        android:text="Play"
        android:layout_toRightOf="@+id/song2txt"
        android:layout_below="@+id/song1btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        tools:ignore="UnknownId" />
</RelativeLayout>