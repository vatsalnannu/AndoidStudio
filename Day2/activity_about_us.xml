<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    tools:ignore="MissingDefaultResource">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/aboutushead"
                android:text="About US"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#035DBD"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card1"
        android:layout_height="400dp"
        android:layout_below="@+id/aboutushead">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/ceo" />
            <TextView
                android:layout_width="match_parent"
                android:text="A successful and passionate businessman, Karan Bedi has made a strong presence in the Indian entertainment industry through his diverse experience in the digital world. Karan Bedi is a graduate of Stanford University in Economics. "
                android:layout_below="@+id/image1"
                android:textSize="20dp"
                android:id="@+id/text1"
                android:textColor="#000000"

                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/image1"
                android:text="CEO Karan Bedi"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card2"
        android:layout_height="400dp"
        android:layout_below="@+id/card1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/rel2"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/manager" />
            <TextView
                android:layout_width="match_parent"
                android:text="MX Player, the local video platform, has recently announced the appointment of Viraj Jit Singh as its SVP and head - revenue. Singh brings with himself over 19 years of experience in sectors like broadcasting, entertainment and amusement parks."
                android:layout_below="@+id/image2"
                android:textSize="20dp"
                android:id="@+id/text2"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/image2"
                android:text="SVP Viraj Jit"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_height="wrap_content"/>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>