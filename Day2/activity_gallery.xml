<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gallery">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="303dp"
        android:background="@drawable/queen" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image1"
        android:text="Queen : A MX Original Series"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/image2"
        android:layout_toRightOf="@id/image1"
        android:layout_width="200dp"
        android:layout_marginLeft="5dp"
        android:layout_height="303dp"
        android:background="@drawable/high" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text2"
        android:layout_below="@+id/image1"
        android:layout_toRightOf="@id/text1"
        android:text="High : A MX Original Series"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image3"
        android:layout_below="@id/text1"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"

        android:layout_height="303dp"
        android:background="@drawable/roohaniyat" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/text3"
        android:layout_below="@+id/image3"
        android:text="Roohaniyat"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_below="@id/text2"
        android:layout_toRightOf="@id/image3"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="303dp"
        android:background="@drawable/indori" />
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/text4"
        android:layout_below="@+id/image4"
        android:layout_toRightOf="@id/text3"
        android:text="Indori Ishq"
        android:textSize="15dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>
</RelativeLayout>